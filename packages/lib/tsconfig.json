{
  "include": ["index.ts", "build_mod.js", "src/**/*.ts", "src/**/*.js"],
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "commonjs",
    "target": "es2022",
    "rootDir": ".",
    "outDir": "dist",
    "composite": false,
    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
