{
  "include": ["controller.ts", "package.json", "src/**/*.ts"],
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "commonjs",
    "target": "es2022",
    "rootDir": ".",
    "outDir": "dist/controller",
    "composite": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
	 "resolveJsonModule": true
  }
}
