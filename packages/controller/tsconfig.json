{
  "include": ["controller.ts", "package.json", "src/**/*.ts"],
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "es2022",
    "rootDir": ".",
    "outDir": "dist/controller",
    "composite": true,
    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
	 "resolveJsonModule": true
  }
}
