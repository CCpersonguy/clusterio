{
	"plugins": [
		"plugins/markdown"
	],
	"tags": {
		"allowUnknownTags": false
	},
	"opts": {
		"destination": "docs/api",
		"recurse": true
	},
	"source": {
		"include": [
			"packages/controller/src/",
			"packages/controller/controller.js",
			"packages/slave/src/",
			"packages/slave/slave.js",
			"packages/ctl/src/",
			"packages/ctl/ctl.js",
			"packages/lib/",
			"plugins/"
		],
		"excludePattern": "node_modules"
	}
}
